@model NoticeBoard.Models.Party.CreatePartyModel
@{
    ViewData["Title"] = "New Party";
}

@using (Html.BeginForm("Create", "Party", "POST"))
{
    <div class="row" style="padding-bottom:10px">
        <div class="col-4">
            <div class="card h-100 ">
                <div class="card-header">
                    <div>Party Details</div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="form-group" style="width:100%">
                            <div class="col-12">
                                <label asp-for="Name" class="control-label"></label>
                            </div>
                            <div class="col-12">
                                <input asp-for="Name" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group" style="width:100%">
                            <div class="col-12">
                                <label asp-for="Description" class="control-label"></label>
                            </div>
                            <div class="col-12">
                                <textarea rows="5" asp-for="Description" class="form-control textarea-no-resize"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card h-100 ">
                <div class="card-header">
                    <div>Accepted Sources</div>
                </div>
                <div class="card-body">
                    <div class="col-12">
                        @for (int i = 0; i < Model.Sources.Count(); i++)
                        {<div class="row">
                             <div>
                                 @Html.HiddenFor(m => m.Sources[i].Id)
                                 @Html.HiddenFor(m => m.Sources[i].Name)
                                 <input asp-for="Sources[i].IsSelected" type="checkbox" />
                                 <label asp-for="Sources[i].Name">@Model.Sources[i].Name</label>
                             </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card h-100">
                <div class="card-header">
                    <div>Additional Rules</div>
                </div>

                <div class="card-body">
                    <div style="padding-bottom:10px">
                        <div class="card">
                            <div class="card-header">
                                <div>Character Generation</div>
                            </div>
                            <div class="card-body">
                                @for (int i = 0; i < Model.CharacterGenOptionModels.Count(); i++)
                                {
                                    <div class="row">
                                        <div>
                                            <input asp-for="SelectedCharacterGenOptionId" type="radio" value="@Model.CharacterGenOptionModels[i].Id">
                                            <label>@Model.CharacterGenOptionModels[i].Name</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <div>Character Starting Level</div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="form-group" style="width:100%">
                                    <div class="col-12">
                                        <label asp-for="NewCharacterStartingLevel" class="control-label"></label>
                                    </div>
                                    <div class="col-12">
                                        <input asp-for="NewCharacterStartingLevel" type="number" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <input class="btn btn-primary float-right" type="submit" value="Create" />
        </div>
    </div>
}

