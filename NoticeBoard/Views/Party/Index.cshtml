@model IEnumerable<NoticeBoard.Models.Party.PartyModel>
@{
    ViewData["Title"] = "My Parties";
}

<div class="row" style="padding-bottom:10px">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th width="20%">Name</th>
                            <th width="70%">Description</th>
                            <th width="10%">Next Session</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var party in Model)
                        {
                        <tr>
                            <td><a asp-controller="Party" asp-action="Details" asp-route-partyId="@party.PartyId">@party.Name</a></td>
                            <td>@Html.Raw(party.Description.Replace("\r\n", "<br/>"))</td>
                            <td>Schedule</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>