@model NoticeBoard.Models.Shared.RadioSelectModel<NoticeBoard.Models.Backgrounds.BackgroundModel>

@{
    ViewData["Title"] = "New Character - Background";
}

<div id="NewCharacterVue">
    @Html.HiddenFor(model => model.Options)
    @using (Html.BeginForm("SelectBackground", "PlayerCharacter", "POST"))
    {
        @Html.HiddenFor(model => model.PcId)
        @Html.HiddenFor(model => model.SelectedOptionId)
        <div class="row h-100">
            <div class="col-xl-4">
                <div class="card">
                    <div class="card-body">
                        @foreach (var background in Model.OptionModels)
                        {
                            <div>
                                <input id="Background" v-model="selectionId" v-on:change="OnSelection()" type="radio" name="background" value="@background.Id">
                                <label>@background.Name</label>
                            </div>
                        }
                        <input class="btn btn-primary" type="submit" :disabled="selectionId <= 0" />
                    </div>
                </div>
            </div>
            <div class="col-xl-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row">
                            <div class="text-center">{{ selectionName }}</div>
                        </div>
                        <div class="row">
                            <div>{{ selectionDescription }}</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4">
                <div class="card">
                    <div class="card-body">
                        <img class="resize" :src="'/img/background/' + selectionImagePath" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script src="~/js/NewCharacter.js" type="text/javascript"></script>
}
