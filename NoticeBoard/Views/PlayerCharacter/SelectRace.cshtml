@model NoticeBoard.Models.Races.RaceSelectModel

@{
    ViewData["Title"] = "New Character - Race";
}


@Html.HiddenFor(model => model.RacesJson)
<div class="row">
    <div class="col-xl-4">
        <div class="card">
            <div class="card-body">
                <span asp-validation-for="@Model.SelectedRaceId" class="text-danger"></span>
                @foreach (var race in Model.Races)
                {
                    <div>
                        <input asp-for="SelectedRaceId" type="radio" name="race" value="@race.Id">
                        <label>@race.Name</label>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card">
            <div class="card-body">
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card">
            <div class="card-body">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/NewCharacter.js" type="text/javascript"></script>
}
