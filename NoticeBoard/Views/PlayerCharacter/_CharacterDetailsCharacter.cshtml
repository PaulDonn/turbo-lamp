                        <div class="col-4">
                            <div class="col-12">Height</div>
                            <label class="col-12"><strong></strong></label>
                        </div>
                        <div class="col-4">
                            <div class="col-12">Weight</div>
                            <label class="col-12"><strong></strong></label>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-4">
                            <div class="col-12">Eyes</div>
                            <label class="col-12"><strong></strong></label>
                        </div>
                        <div class="col-4">
                            <div class="col-12">Skin</div>
                            <label class="col-12"><strong></strong></label>
                        </div>
                        <div class="col-4">
