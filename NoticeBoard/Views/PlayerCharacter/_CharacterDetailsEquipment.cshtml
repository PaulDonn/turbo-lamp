                                    }
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Off-Hand Weapon</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    @if (@Model.Equipment.SingleOrDefault(n => n.EquippedSlot == "Ring1") != null)
                                    {
                                        var mainHand = @Model.Equipment.Single(n => n.EquippedSlot == "Ring1");
                                        <img class="img-fluid" src="~/img/Equipment/@(mainHand.Equipment.ImagePath ?? "unknown").png" />
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="text-center">@mainHand.DisplayName()</div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <img class="img-fluid" src="~/img/Equipment/nothing.png" />
                                    }
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Ring 1</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    @if (@Model.Equipment.SingleOrDefault(n => n.EquippedSlot == "Boots") != null)
                                    {
                                        var mainHand = @Model.Equipment.Single(n => n.EquippedSlot == "Boots");
                                        <img class="img-fluid" src="~/img/Equipment/@(mainHand.Equipment.ImagePath ?? "unknown").png" />
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="text-center">@mainHand.DisplayName()</div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <img class="img-fluid" src="~/img/Equipment/nothing.png" />
                                    }
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Boots</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    @if (@Model.Equipment.SingleOrDefault(n => n.EquippedSlot == "Ring2") != null)
                                    {
                                        var mainHand = @Model.Equipment.Single(n => n.EquippedSlot == "Ring2");
                                        <img class="img-fluid" src="~/img/Equipment/@(mainHand.Equipment.ImagePath ?? "unknown").png" />
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="text-center">@mainHand.DisplayName()</div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <img class="img-fluid" src="~/img/Equipment/nothing.png" />
                                    }
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Ring 2</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-center">Equipment</div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-12">
            <div class="card" style="margin-bottom:10px">
                <div class="card-body">
                    @foreach(var equipment in Model.Equipment.Where(n => string.IsNullOrWhiteSpace(n.EquippedSlot)))
                    {
                        <div class="row">
                            <div class="col-12">
                                <div>@equipment.DisplayName()</div>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="text-center">Pack</div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-12">
            <div class="card" style="margin-bottom:10px">
                <div class="card-body">
                    Robes<br />
                    Arcane Focus<br />
                    Spell Book<br />
                </div>
                <div class="card-footer">
                    <div class="text-center">Treasure</div>
                </div>
            </div>
        </div>
    </div>
</div>
