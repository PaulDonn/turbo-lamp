@model NoticeBoard.Models.PlayerCharacters.PlayerCharacterModel

<div>
    <div class="row" style="padding-bottom:10px">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.Copper</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Copper (CP)
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.Silver</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Silver (SP)
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.Electrum</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Electrum (EP)
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.Gold</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Gold (GP)
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.Platinum</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Platinum (PP)
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.TotalGold</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Total (GP)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-4 col-lg-12">
            <div class="card" style="margin-bottom:10px">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <img class="img-fluid" src="~/img/parchment-background-0.png" />
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-center">@Model.Equipment.FirstOrDefault(n => n.EquippedSlot == "Cloak")?.DisplayName()</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Cloak</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <img class="img-fluid" src="~/img/parchment-background-0.png" />
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-center">@Model.Equipment.FirstOrDefault(n => n.EquippedSlot == "Helmet")?.DisplayName()</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Helmet</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <img class="img-fluid" src="~/img/parchment-background-0.png" />
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-center">@Model.Equipment.FirstOrDefault(n => n.EquippedSlot == "Amulet")?.DisplayName()</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Amulet</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <img class="img-fluid" src="~/img/parchment-background-0.png" />
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-center">@Model.Equipment.FirstOrDefault(n => n.EquippedSlot == "MainHand" || n.EquippedSlot == "BothHands")?.DisplayName()</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Main-Hand Weapon</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <img class="img-fluid" src="~/img/parchment-background-0.png" />
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-center">@Model.Equipment.FirstOrDefault(n => n.EquippedSlot == "Armor")?.DisplayName()</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Armor</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <img class="img-fluid" src="~/img/parchment-background-0.png" />
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-center">@Model.Equipment.FirstOrDefault(n => n.EquippedSlot == "OffHand" || n.EquippedSlot == "BothHands")?.DisplayName()</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Off-Hand Weapon</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <img class="img-fluid" src="~/img/parchment-background-0.png" />
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-center">@Model.Equipment.FirstOrDefault(n => n.EquippedSlot == "Ring1")?.DisplayName()</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Ring 1</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <img class="img-fluid" src="~/img/parchment-background-0.png" />
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-center">@Model.Equipment.FirstOrDefault(n => n.EquippedSlot == "Boots")?.DisplayName()</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Boots</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <img class="img-fluid" style="width:auto; height:auto;" src="~/img/parchment-background-0.png" />
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-center">@Model.Equipment.FirstOrDefault(n => n.EquippedSlot == "Ring2")?.DisplayName()</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Ring 2</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-center">Equipment</div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-12">
            <div class="card" style="margin-bottom:10px">
                <div class="card-body">
                    @foreach(var equipment in Model.Equipment.Where(n => string.IsNullOrWhiteSpace(n.EquippedSlot)))
                    {
                        <div class="row">
                            <div class="col-12">
                                <div>@equipment.DisplayName()</div>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="text-center">Pack</div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-12">
            <div class="card" style="margin-bottom:10px">
                <div class="card-body">
                    Robes<br />
                    Arcane Focus<br />
                    Spell Book<br />
                </div>
                <div class="card-footer">
                    <div class="text-center">Treasure</div>
                </div>
            </div>
        </div>
    </div>
</div>
