@model NoticeBoard.Models.PlayerCharacters.PlayerCharacterModel

<div>
    <div class="row" style="padding-bottom:10px">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.Copper</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Copper (CP)
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.Silver</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Silver (SP)
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.Electrum</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Electrum (EP)
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.Gold</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Gold (GP)
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.Platinum</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Platinum (PP)
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    <strong>@Model.TotalGold</strong>
                                </div>
                                <div class="card-footer" align="center">
                                    Total (GP)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-4 col-lg-12">
            <div class="card" style="margin-bottom:10px">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    @if (@Model.Equipment.SingleOrDefault(n => n.EquippedSlot == "Cloak") != null)
                                    {
                                        var mainHand = @Model.Equipment.Single(n => n.EquippedSlot == "Cloak");
                                        <img class="img-fluid" src="~/img/Equipment/@(mainHand.Equipment.ImagePath ?? "unknown").png" />
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="text-center">@mainHand.DisplayName()</div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <img class="img-fluid" src="~/img/Equipment/nothing.png" />
                                    }
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Cloak</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    @if (@Model.Equipment.SingleOrDefault(n => n.EquippedSlot == "Helmet") != null)
                                    {
                                        var mainHand = @Model.Equipment.Single(n => n.EquippedSlot == "Helmet");
                                        <img class="img-fluid" src="~/img/Equipment/@(mainHand.Equipment.ImagePath ?? "unknown").png" />
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="text-center">@mainHand.DisplayName()</div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <img class="img-fluid" src="~/img/Equipment/nothing.png" />
                                    }
                                </div>
                                <div class="card-footer">
                                    <div class="text-center">Helmet</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body" align="center">
                                    @if (@Model.Equipment.SingleOrDefault(n => n.EquippedSlot == "Amulet") != null)
                                    {
                                        var mainHand = @Model.Equipment.Single(n => n.EquippedSlot == "Amulet");
                                        <img class="img-fluid" src="~/img/Equipment/@(mainHand.Equipment.ImagePath ?? "unknown").png" />
                                        <div class="row">
